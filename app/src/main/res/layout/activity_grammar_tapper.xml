<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="#121212"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Title -->
    <TextView
        android:text="@string/grammar_tapper_title"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="26sp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Instruction -->
    <TextView
        android:id="@+id/tvInstruction"
        android:text="@string/grammar_tapper_instruction"
        android:textColor="#BBBBBB"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Clickable sentence -->
    <TextView
        android:id="@+id/tvSentence"
        android:text="I will go home"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/sentence_box"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Feedback -->
    <TextView
        android:id="@+id/tvFeedback"
        android:text=""
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:visibility="gone"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Next Button -->
    <Button
        android:id="@+id/btnNext"
        android:text="next_question"
        android:layout_marginTop="20dp"
        android:backgroundTint="#4CAF50"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>
