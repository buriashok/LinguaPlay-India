<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.linguaplayindia">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/grammer_games"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/grammer_games_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LinguaPlayIndia.NoActionBar">

        <!-- Launcher (first screen shown) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.LinguaPlayIndia.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Authentication screens -->
        <activity
            android:name="com.example.linguaplayindia.auth.LoginActivity"
            android:exported="true" />
        <activity
            android:name="com.example.linguaplayindia.auth.SignupActivity"
            android:exported="true" />

        <!-- Core App Screens -->
        <activity android:name=".LanguageSelectActivity" android:exported="true" />
        <activity android:name=".HomeActivity" android:exported="true" />
        <activity android:name=".SettingsActivity" android:exported="true" />
        <activity android:name=".ProgressActivity" android:exported="true" />
        <activity android:name=".LearningActivity" android:exported="true" />
        <activity android:name=".UtilityActivity" android:exported="true" />
        <activity android:name=".LearningDetailActivity" android:exported="false" />
        <activity android:name=".DictionaryActivity" android:exported="false" />
        <activity android:name=".TTSActivity" android:exported="false" />
        <activity android:name=".DrawingPadActivity" android:exported="false" />
        <activity android:name=".TranslatorActivity" android:exported="false" />

        <!-- Game Screens -->
        <activity android:name=".GamesActivity" android:exported="true" />
        <activity android:name=".GameGapFillActivity" android:exported="true" />
        <activity android:name=".GameSentenceBuilderActivity" android:exported="true" />
        <activity android:name=".GameGrammarTapperActivity" android:exported="true" />
        <activity android:name=".GameErrorSpotterActivity" android:exported="true" />

    </application>
</manifest>
