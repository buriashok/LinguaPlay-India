<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.linguaplayindia">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/learn_launch"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/learn_launch_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LinguaPlayIndia">
        <activity
            android:name=".LearningDetailActivity"
            android:exported="false" />
        <activity
            android:name=".DictionaryActivity"
            android:exported="false" />
        <activity
            android:name=".TTSActivity"
            android:exported="false" />
        <activity
            android:name=".DrawingPadActivity"
            android:exported="false" />
        <activity
            android:name=".TranslatorActivity"
            android:exported="false" /> <!-- Main Launcher -->
        <activity
            android:name=".LanguageSelectActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- All Other Screens -->
        <activity
            android:name=".HomeActivity"
            android:exported="true" />
        <activity
            android:name=".SettingsActivity"
            android:exported="true" />
        <activity
            android:name=".ProgressActivity"
            android:exported="true" />
        <activity
            android:name=".LearningActivity"
            android:exported="true" />
        <activity
            android:name=".UtilityActivity"
            android:exported="true" />
        <activity
            android:name=".LoginActivity"
            android:exported="true" /> <!-- Games -->
        <activity
            android:name=".GamesActivity"
            android:exported="true" />
        <activity
            android:name=".GameGapFillActivity"
            android:exported="true" />
        <activity
            android:name=".GameSentenceBuilderActivity"
            android:exported="true" />
        <activity
            android:name=".GameGrammarTapperActivity"
            android:exported="true" />
        <activity
            android:name=".GameErrorSpotterActivity"
            android:exported="true" />
    </application>

</manifest>